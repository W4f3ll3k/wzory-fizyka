#include <iostream>
#include <conio.h> 
#include <cstdlib>
#include <math.h>
#include <windows.h>
using namespace std;


int main()
{
	cout<<"***********************************************************************************************************************"<<endl; 
	cout<<"*                                                     KINEMATYKA                                                      *"<<endl; 
	cout<<"***********************************************************************************************************************"<<endl;
	cout<<"* 1. Ruch prostoliniowy (charakterystyka ogolna ze wzorami)                                                           *"<<endl; 
	cout<<"* 2. Predkosc w ruchu prostoliniowym                                                                                  *"<<endl; 
	cout<<"* 3. Ruch jednostajny prostoliniowy                                                                                   *"<<endl; 
	cout<<"* 4. Przyspieszenie w ruchu jednostajnie zmiennym                                                                     *"<<endl; 
	cout<<"* 5. Ruch jednostajnie przyspieszony                                                                                  *"<<endl; 
	cout<<"* 6. Ruch jednostajnie opozniony                                                                                      *"<<endl;
	cout<<"***********************************************************************************************************************"<<endl;  
	cout<<"* 7. Ruch krzywoliniowy (charakterystyka ogolna ze wzorami)                                                           *"<<endl; 
	cout<<"* 8. Predkosc w ruchu krzywoliniowym                                                                                  *"<<endl; 
	cout<<"* 9. Przyspieszenie w ruchu krzywoliniowym                                                                            *"<<endl; 
	cout<<"* 10. Ruch jednostajny po okregu                                                                                      *"<<endl; 
	cout<<"* 11. Ruch jednostajnie zmienny po okregu                                                                             *"<<endl; 
	cout<<"* 12. Rzut poziomy                                                                                                    *"<<endl; 
	cout<<"* 13. Rzut pionowy                                                                                                    *"<<endl; 
	cout<<"* 14. Rzut ukosny                                                                                                     *"<<endl;				
	cout<<"***********************************************************************************************************************"<<endl; 
	
	int c; 
	cout<<"Wybierz interesujacy Cie temat"<<endl; 
	cin>>c; 
	cout<<"***********************************************************************************************************************"<<endl;
	cout<<"Wybrales zadanie numer "<<c<<endl; 
	cout<<"***********************************************************************************************************************"<<endl;
	
	switch(c)
	{
		case 0:
		break;
		
		case 1:
			{
				cout<<"***********************************************************************************************************************"<<endl; 
				cout<<"*                                                  RUCH PROSTOLINIOWY                                                 *"<<endl; 
				cout<<"***********************************************************************************************************************"<<endl; 
				cout<<"* 1. Ruch prostoliniowy (charakterystyka ogolna ze wzorami)                                                           *"<<endl; 			
				cout<<"* 0. - Wyjscie z aplikacji                                                                                            *"<<endl;
				cout<<"***********************************************************************************************************************"<<endl; 
				cout<<"* UWAGA 1 !!! symbole matematyczne zostaly uwzglednione w postaci slownej w nawiasie kwadratowym                      *"<<endl;
				cout<<"* UWAGA 2 !!! jednostki: jednostki podstawowe ukladu SI                                                               *"<<endl;
				cout<<"* UWAGA 3 !!! we wzorach zostal pominiety symbol mnozenia zwiazany z zabiegiem estetycznym w matematyce (a*b -> ab)   *"<<endl;
				cout<<"***********************************************************************************************************************"<<endl; 
				cout<<"* Symbole i oznaczenia:                                                                                               *"<<endl;
				cout<<"* s, [delta]s, S, [delta]S -przebyta droga                                                                            *"<<endl;
				cout<<"* t, [delta]t - czas ruchu                                                                                            *"<<endl;
				cout<<"* V, [delta]V - predkosc ruchu                                                                                        *"<<endl;
				cout<<"* V0 - predkosc poczatkowa                                                                                            *"<<endl;
				cout<<"* Vk - predkosc koncowa                                                                                               *"<<endl;
				cout<<"* a - przyspieszenie                                                                                                  *"<<endl;
				cout<<"* x0 - odleglosc pd poczatku ukladu odniesienia                                                                       *"<<endl;
				cout<<"* x(t) - przemieszczenie w czasie t od poczatku ukladu odniesienia                                                    *"<<endl;
				cout<<"***********************************************************************************************************************"<<endl; 
				cout<<"***********************************************************************************************************************"<<endl; 
				cout<<"* Wzor na droge w ruchu jednostajnie prostoliniowym:                                                                  *"<<endl;
				cout<<"*                                                 s = vt                                                              *"<<endl;
				cout<<"* Wzor na przemieszczenie ciala od poczatku ukladu odniesienia w ruchu jednostajnym:                                  *"<<endl;
				cout<<"*                                             x(t) = x0 + vt                                                          *"<<endl;
				cout<<"* Wzor na droge w ruchu jednostajnie przyspieszonym bez predkości poczatkowej:                                        *"<<endl;
				cout<<"*                                             s = (at^2)/2                                                            *"<<endl;
				cout<<"* Wzor na droge w ruchu jednostajnie przyspieszonym z predkoscia poczatkowa:                                          *"<<endl;
				cout<<"*                                          s = v0t + (at^2/2)                                                         *"<<endl;
				cout<<"* Wzor na droge w ruchu jednostajnie opoznionym z predkoscia poczatkowa:                                              *"<<endl;
				cout<<"*                                          s = v0t + (at^2/2)                                                         *"<<endl;
				cout<<"* Wzor na przemieszczenie ciala od poczatku ukladu odniesienia w ruchu jednostajnie przyspieszonym:                   *"<<endl;	
				cout<<"*                                      x(t) = x0 + V0t + (at^2/2)                                                     *"<<endl;
				cout<<"* Wzor na przemieszczenie ciala od poczatku ukladu odniesienia w ruchu jednostajnie opoznionym:                       *"<<endl;
				cout<<"*                                      x(t) = x0 + V0t - (at^2/2)                                                     *"<<endl;
				cout<<"* Wzor na predkosc koncowa (po czasie t) w ruchu jednostajnie przyspieszonym:                                         *"<<endl;
				cout<<"*                                            Vk = V0 + at                                                             *"<<endl;
				cout<<"* Wzor na predkosc koncowa (po czasie t) w ruchu jednostajnie opoznionym:                                             *"<<endl;
				cout<<"*                                            Vk = V0 - at                                                             *"<<endl;
				cout<<"* Wzor na przyspieszenie w ruchu jednostajnie przyspieszonym:                                                         *"<<endl;
				cout<<"*                                     a = [delta]V / [delta]t                                                         *"<<endl;
				cout<<"* Wzor na przyspieszenie w ruchu jednostajnie opoznionym:                                                             *"<<endl;
				cout<<"*                                   - a = [delta]V / [delta]t                                                         *"<<endl;
				cout<<"***********************************************************************************************************************"<<endl;
				cout<<"***********************************************************************************************************************"<<endl;
				cout<<"* Jednostki:                                                                                                          *"<<endl;
				cout<<"* czas - 1 sekunda [1 s]                                                                                              *"<<endl;
				cout<<"* droga - 1 metr [1 m]                                                                                                *"<<endl;
				cout<<"* predkosc - 1 metr/1 sekunde ->  [1 m/s]                                                                             *"<<endl;
				cout<<"* przyspieszenie - 1 metr / 1 sekunda ^2 -> [1 m/s^2]                                                                 *"<<endl;
				cout<<"***********************************************************************************************************************"<<endl;
			}
		break;
		case 2:
			{
				
			}
		break;
		case 3:
			{
				
			}
		break;
		case 4:
			{
				
			}
		break;
		case 5:
